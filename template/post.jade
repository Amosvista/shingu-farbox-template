extends base.jade
block title
	{{post.title}} - {{site.title}}
block content
	.primary
		.post
			header
				h2
					a(href=post.url)= post.title
				.entry-meta
					span
						i.fa.fa-clock-o &nbsp;
						| {{ post.date.format('%Y-%m-%d') }}
					span.count
						i.fa.fa-book &nbsp;
						| {{post.visits}}
					if post.tags
						span
							i.fa.fa-tags &nbsp;
							for tag in post.tags
								a.tag(href="/tags/{{tag}}") &nbsp;{{tag}}

			.entry= post.content

			include include/comments

	include include/sider.html
